{
  "multipart": [
    { "when": { "facing": "north" },
      "apply": { "model":  "roehrchen:block/splitter", "y":  0, "uvlock": false }
    },
    { "when": { "facing": "east" },
      "apply": { "model":  "roehrchen:block/splitter", "y":  90, "uvlock": false }
    },
    { "when": { "facing": "south" },
      "apply": { "model":  "roehrchen:block/splitter", "y":  180, "uvlock": false }
    },
    { "when": { "facing": "west" },
      "apply": { "model":  "roehrchen:block/splitter", "y":  270, "uvlock": false }
    }
  ]
}